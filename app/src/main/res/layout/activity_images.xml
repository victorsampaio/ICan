<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/can_flag2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.br.ican.images.ImagesActivity">

    <TextView
        android:id="@+id/img_ican"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="ICan - Images"
        android:textColor="#FF0000"
        android:textSize="30dp" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/img_layout_1"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/img_layout_2"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_a"
                android:orientation="horizontal">

            </LinearLayout>


            <LinearLayout
                android:id="@+id/img_layout_3"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_b"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/img_layout_4"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_c"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/img_layout_5"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_d"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/img_layout_6"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_e"
                android:orientation="horizontal" />


            <LinearLayout
                android:id="@+id/img_layout_7"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:background="@drawable/canada_f"
                android:orientation="horizontal" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
