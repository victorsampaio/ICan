<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.br.ican.ICanMainActivity"
    tools:showIn="@layout/activity_ican_main"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:src="@drawable/maple_leaf"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearMajor"
        android:layout_alignEnd="@+id/linearMajor" />

    <LinearLayout
        android:id="@+id/linearMajor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@+id/imageView"
        android:layout_marginBottom="120dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeOne"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/textHymn"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Hymn"
                android:textColor="@color/text_color"
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeTwo"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/textProvinces"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Provinces"
                android:textColor="@color/text_color"
                android:textSize="30dp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeThree"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/textPhotos"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:foregroundGravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:text="Photos"
                android:textColor="@color/text_color"
                android:textSize="30dp" />

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>
