<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.br.ican.provinces.newbrunswick.NewBrunswickActivity">


    <TextView
        android:id="@+id/title_alberta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_new_brunswick"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="24dp"/>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/title_alberta"
        android:background="@drawable/new_brunswick_flag"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_alberta"
        android:layout_below="@+id/imageView"
        android:padding="15dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:text="@string/text_new_brunswick"
        />

</RelativeLayout>
