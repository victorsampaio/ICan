<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ICanMainActivity"
    android:background="@drawable/can_flag2"
    >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/ican_title_main"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FF0000"
        android:textSize="30dp"/>

    <ImageButton
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:id="@+id/imgbGoHymn"
        android:background="@drawable/fflag"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:id="@+id/imgbGobImages"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:background="@drawable/imgs"
        android:layout_alignTop="@+id/imgbGoHymn"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/imgbGoHistory"
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/textView" />

</RelativeLayout>
